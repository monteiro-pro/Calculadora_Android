<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:textColor="@color/numerationButton"
        android:gravity="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:textSize="60dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvClear"
                style="@style/ActionButtonStyle"
                android:onClick="onClickClear"
                android:text="C" />

            <Button
                android:id="@+id/tvInvert"
                style="@style/ActionButtonStyle"
                android:onClick="onClickOperator"
                android:text="+/-" />

            <Button
                android:id="@+id/tvPorcent"
                style="@style/ActionButtonStyle"
                android:onClick="onClickOperator"
                android:text="%" />

            <Button
                android:id="@+id/tvDivide"
                style="@style/ActionButtonStyle"
                android:onClick="onClickOperator"
                android:text="/" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvSeven"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="7" />

            <Button
                android:id="@+id/tvEight"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="8" />

            <Button
                android:id="@+id/tvNine"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="9" />

            <Button
                android:id="@+id/tvMul"
                style="@style/ActionButtonStyle"
                android:onClick="onClickOperator"
                android:text="x" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvFour"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="4" />

            <Button
                android:id="@+id/tvFive"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="5" />

            <Button
                android:id="@+id/tvSix"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="6" />

            <Button
                android:id="@+id/tvMinus"
                style="@style/ActionButtonStyle"
                android:onClick="onClickOperator"
                android:text="-" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvOne"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="1" />

            <Button
                android:id="@+id/tvTwo"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="2" />

            <Button
                android:id="@+id/tvThree"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="3" />

            <Button
                android:id="@+id/tvPlus"
                style="@style/ActionButtonStyle"
                android:onClick="onClickOperator"
                android:text="+" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/tvDot"
                style="@style/NumberButton"
                android:onClick="onClickNumber"
                android:text="."/>
            <Button
                android:id="@+id/tvZero"
                style="@style/NumberButtonZero"
                android:onClick="onClickNumber"
                android:text="0" />
            <Button
                android:id="@+id/tvEquals"
                style="@style/ResultButtonStyle"
                android:onClick="onClickEqual"
                android:text="=" />
            <ImageView
                android:id="@+id/tvBackSpace"
                style="@style/ActionButtonStyle"
                android:scaleType="center"
                android:src="@drawable/ic_backspace_white_18dp"
                android:onClick="onClickBackSpace"
                android:text="f" />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>